# HEIR Outreach Scraper V2.0 - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================================================

# Your PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/heir_outreach
NEON_DATABASE_URL=postgresql://username:password@localhost:5432/heir_outreach

# Optional: Separate read replica for better performance
# READ_REPLICA_URL=postgresql://username:password@read-replica-host:5432/heir_outreach

# ============================================================================
# HEIR PLATFORM CONFIGURATION
# ============================================================================

# Environment: development, staging, production
PLATFORM_ENV=development
NODE_ENV=development

# HEIR System Version
HEIR_VERSION=2.0.0

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# Schema version checking: strict, relaxed, disabled
SCHEMA_VERSION_CHECK=strict

# HEIR Feature Flags
ORBT_ENABLED=true
DATABASE_GATEKEEPER_ENABLED=true
API_GATEWAY_ENABLED=true
DOCTRINE_ENFORCEMENT=strict
INSTITUTIONAL_KNOWLEDGE_ENABLED=true

# ============================================================================
# OUTREACH API CONFIGURATION (REQUIRED)
# ============================================================================

# Apollo.io API Key for B2B contact database
APOLLO_API_KEY=your-apollo-api-key-here

# Apify API Key for LinkedIn scraping
APIFY_API_KEY=your-apify-api-key-here

# Instantly.ai API Key for email validation
INSTANTLY_API_KEY=your-instantly-api-key-here

# Google Maps API Key for business data
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Authentication settings
AUTH_REQUIRED=true
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# TLS/SSL settings (for production)
TLS_REQUIRED=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Enable metrics collection
METRICS_ENABLED=true

# Monitoring webhook endpoint
HEIR_MONITORING_ENDPOINT=https://your-monitoring-service.com/webhook

# Health check settings
HEALTH_CHECK_INTERVAL=30s

# Alert webhook for critical issues
ALERT_WEBHOOK=https://your-alerting-service.com/webhook

# Grafana password for monitoring dashboard
GRAFANA_PASSWORD=admin123

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Redis for enhanced rate limiting and caching
REDIS_URL=redis://localhost:6379/0

# Email service for notifications
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@yourdomain.com

# External API configurations
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3

# ============================================================================
# AUDIT & COMPLIANCE
# ============================================================================

# Audit log retention (in days)
AUDIT_RETENTION_DAYS=365

# Enable PII detection and masking
PII_DETECTION_ENABLED=true

# Compliance reporting endpoint
COMPLIANCE_REPORTING_ENDPOINT=https://your-compliance-system.com/api/reports

# ============================================================================
# DEVELOPMENT SETTINGS (DEVELOPMENT ONLY)
# ============================================================================

# Enable debug features (development only)
DEBUG_MODE=false

# Skip certain validations in development
SKIP_AUTH_IN_DEV=false

# Enable request/response logging
REQUEST_LOGGING_ENABLED=true

# Suppress test logs (set to false to see all logs in tests)
SUPPRESS_TEST_LOGS=true

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=20

# ============================================================================
# APPLICATION-SPECIFIC SETTINGS
# ============================================================================

# Application identifier (used in doctrine headers)
APP_BLUEPRINT_ID=heir-outreach-scraper-v2

# Feature flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_SYNC=true
FEATURE_AI_LEAD_SCORING=true
FEATURE_INSTITUTIONAL_LEARNING=true

# Scraping configuration
SCRAPING_MAX_CONCURRENT=5
SCRAPING_DELAY_MIN=1000
SCRAPING_DELAY_MAX=3000
SCRAPING_TIMEOUT=30000

# Lead scoring thresholds
LEAD_SCORE_THRESHOLD=0.7
PREMIUM_LEAD_THRESHOLD=0.85

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================

# PostgreSQL Docker settings
POSTGRES_DB=heir_outreach
POSTGRES_USER=heir_user
POSTGRES_PASSWORD=secure_password_change_in_production

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================

# Test database URL
TEST_DATABASE_URL=postgresql://heir_user:test_password@localhost:5432/heir_test

# ============================================================================
# CLOUD PROVIDER SETTINGS (IF APPLICABLE)
# ============================================================================

# AWS Configuration (if using AWS services)
# AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Google Cloud Configuration (if using GCP services)
# GOOGLE_CLOUD_PROJECT_ID=your-gcp-project
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure Configuration (if using Azure services)
# AZURE_SUBSCRIPTION_ID=your-azure-subscription
# AZURE_CLIENT_ID=your-azure-client-id
# AZURE_CLIENT_SECRET=your-azure-client-secret

# ============================================================================
# RENDER DEPLOYMENT SETTINGS (IF USING RENDER)
# ============================================================================

# Render service configuration
# PORT=3000
# PYTHON_VERSION=3.11
# NODE_VERSION=18